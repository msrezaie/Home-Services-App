<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/backimage"
    tools:context=".UserSignUp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true"
            android:orientation="vertical" >

            <androidx.cardview.widget.CardView
                android:layout_gravity="center"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:elevation="10dp"
                app:cardCornerRadius="13dp"
                android:layout_marginTop="15dp" >

                <ImageView
                    android:id="@+id/banner_img"
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/imagelogoo"
                    android:alpha="0.2"
                    android:contentDescription="image" />

                <TextView
                    android:layout_marginTop="35dp"
                    android:textStyle="bold"
                    android:textSize="30dp"
                    android:textColor="#0E82D2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Home-Service App"/>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_gravity="center"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:elevation="10dp"
                app:cardCornerRadius="13dp"
                android:background="@color/cardview_dark_background"
                android:layout_marginTop="10dp" >
                <TextView
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:padding="10dp"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="User Registration"
                    android:textColor="#0E82D2"
                    android:textSize="25dp"/>

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:layout_width="320dp"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <EditText
                    android:layout_marginTop="15dp"
                    android:id="@+id/usrName"
                    android:gravity="center"
                    android:hint="Username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="#ffffff" />

                <EditText
                    android:layout_marginTop="5dp"
                    android:id="@+id/usrPassw"
                    android:gravity="center"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="#ffffff" />

                <EditText
                    android:layout_marginTop="5dp"
                    android:id="@+id/usrFname"
                    android:gravity="center"
                    android:hint="Full Name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="#ffffff" />

                <EditText
                    android:layout_marginTop="5dp"
                    android:id="@+id/usrPhn"
                    android:gravity="center"
                    android:hint="Phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="#ffffff" />

                <EditText
                    android:layout_marginTop="5dp"
                    android:id="@+id/usrAddr"
                    android:gravity="center"
                    android:hint="Address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="#ffffff" />

            </LinearLayout>

            <Button
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:id="@+id/usrSign"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Sign-Up"
                android:padding="10dp"
                android:background="@drawable/background1"
                android:layout_marginBottom="30dp"
                android:textColor="#0E82D2" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>